<html>
<head>
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1" user-scalable="no">
		<link rel="stylesheet" type="text/css" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
		<style>
					body,html {
			  height: 100%;
			  width: 100%;
			  margin: 0;
			  background: linear-gradient(to bottom, #9c9696 , #62383b);
			  font-family: "Leelawade UI", "Segoe UI";
			  text-align: center;
			  font-size: 95%;
			}
			main {
			  width: 75%;
			  margin-left: 10%;
			  margin-top: 3%;
			  position: fixed;
			  background: #2B2B37;
			  color: #BF5656;
			  padding: 2.8em;
			  overflow: collapse;
           padding-left: 28px;
			  /*box-shadow: 15px 15px 20px 0 rgba(0, 0, 0, 0.3);*/
			}
			h1 {
			  padding-bottom: 0.8em;
			}
			section {
			  width: 100%;
			  height: 100%;
			}
			section:first-of-type {
			  border-right: solid 1px #BF5656;
			}
			.player {
			  width: 90%;
			  margin-left: 5%;
			  border-bottom: solid 1px #BF5656;
			}
			.player span[class^="ion"] {
			  font-size: 2.5em;
			  width: 32%;
			  padding-bottom: 1em;
			  display: inline-block;
			  transition: all 0.3s;
			}
			.player span[class^="ion"]:hover {
			  cursor: pointer;
			  color: #303F9F;
			}
			.radio {
			  width: 100%;
			  text-align: center;
			  padding-bottom:  1.4em;
			}
			#radiocon {
			  padding: 0 0.3em 0 0;
			  display: inline;
			  color: #BDBDBD;
			}
			#radiocon:hover {
			  color: #bdbdbd;
			  cursor: default;
			}
			.radio-des {
			  font-size: 1.7em;
			  color: #BDBDBD;
			}

			.info {
			  width: 90%;
			  margin-left: 5%;
			  padding-top: 3em;
			}
			.row {
			  width: 90%;
			  margin-left: 5%;
			  font-size: 1.4em;
			  color: #BDBDBD;
			  text-align: left;
			}
			.row span[class^="ion"] {
			  color: #BF5656;
			  font-size: 1.8em;
			  padding-right: 0.3em;
			}

			.wrapper {
			  width: 90%;
			  margin-left: 5%;
			}
			.kachel {
			  width: 40%;
			  margin: 1.2em;
			  padding: 1em 0;
			  float: left;
			  border: solid 1px #BF5656;
			  transition: all 0.4s;
			}
			.kachel:hover {
			  cursor: pointer;
			  background: #BF5656;
			  color: #bdbdbd;
			}
			.kachel span[class^="ion"] {
			  font-size: 1.2em;
			}
			.kachel h4 {
			  font-size: 0.9em;
			}
			@media (max-width: 1250px) {
			  body,html {
			    font-size: 90%;
			  }
			  main {
			    padding: 1em;
			  }
			  .wrapper {
			    width: 95%;
			    margin-left: 2.5%;
			  }
			  .kachel {
			    width: 37%;
			  }
			}
			@media (max-width: 740px) {
			  body,html {
			    background: #2B2B37;
			  }
			  main {
			    position: relative;
			    width: 100%;
			    height: 100%;
			    padding: 0;
			    margin: 0;
			  }
			  .kachel {
			    width: 95%;
			  }
			  .wrapper {
			    width: 98%;
			    margin-left: 1%;
			  }
			}
			@media (max-width: 480px) {
			  section {
			  float: none;
			  width: 95%;
			  height: 100%;
			}
			section:first-of-type {
			  border-right: none;
			}
			}
		</style>
	</head>
	<body>
		<main>
		  <!-- <section> -->
		    <div class="wrapper">
		    <div class="kachel">

		        <h4>Seguir</h4>
		    </div>
		      <div id="mover" class="kachel">
		          <h4>Virar Esquerda</h4>
		        </div>
		      <div class="kachel">
		          <h4>Virar Direita</h4>
		      </div>
		      <div class="kachel">
		          <h4>Parar</h4>
		      </div>
		    </div>
		  <!-- </section> -->
		</main>
	</body>
	<script
			  src="https://code.jquery.com/jquery-3.2.1.min.js"
			  integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
			  crossorigin="anonymous"></script>
	<script>
		jQuery("#mover").on("click", function(){
			window.location.href = "/mover";
		});


	</script>
</html>
